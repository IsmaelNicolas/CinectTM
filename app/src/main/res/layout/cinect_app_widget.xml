<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.CinectTM.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.CinectTM.AppWidgetContainer">

    <Button
        android:id="@+id/appwidget_text"
        android:layout_width="109dp"
        android:layout_height="68dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/appwidget_text"
        android:text="@string/appwidget_text"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/RandomMovie"
        android:layout_width="106dp"
        android:layout_height="59dp"
        android:layout_above="@+id/appwidget_text"
        android:layout_alignEnd="@+id/appwidget_text"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="10dp"
        android:text="RandomMovie" />
</RelativeLayout>